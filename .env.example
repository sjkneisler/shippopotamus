# Shippopotamus Configuration

# Maximum size for the prompt index file (in KB)
# Default: 2KB (original design constraint)
# Recommended: 4-8KB for more flexibility
PROMPT_INDEX_MAX_KB=4

# Enable verbose prompt loading logs
PROMPT_LOADER_VERBOSE=false

# Token estimation multiplier (chars to tokens ratio)
# Default: 0.25 (roughly 4 chars = 1 token)
TOKEN_ESTIMATE_RATIO=0.25